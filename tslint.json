{
  "extends": "tslint:recommended",
  "formatter": "json",
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "no-var-requires": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "ordered-imports": false,
    "max-line-length": [true, 160],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "object-literal-sort-keys": false,
    "no-trailing-whitespace": [false, "ignore-comments"],
    "typedef-whitespace": [
      false,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-preblock"
    ]
  }
}